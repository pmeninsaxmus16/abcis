{% extends "ABCIsystemBundle::layoutAdmin.html.twig" %}
{% block title %} Sections List {% endblock %}

{% block scripthead %}
 <script src="{{ asset('Resources/js/bootstrap-tooltip.js') }}"></script>
{% endblock %}
 
{% block sidebar %}{% endblock %} 

{% block contenido %}
{% import "ABCIsystemBundle:Default:tools.html.twig" as print %}

<div class="span12 ">
<h3>
{{block('title')}}   
</h3>  

<p><a href="#save" class="btn btn-primary"  data-toggle="modal">
<i class="icon-plus icon-white"></i> Add new
</a></p>
    <table class="table table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Weight</th>
                <th>Is active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('isystem_admin_mtto_sections_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.weight }}</td>
                <td>{{ entity.isActive }}</td>
                <td>
                    {{ print.action('isystem_admin_mtto_sections_show','isystem_admin_mtto_sections_edit', entity.id)}}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="pagination pagination-small pagination-right">
{{ knp_pagination_render(pagination) }}
</div>

{{ print.modalaction('Section','save')}}
{{ print.modalaction('Section','edit')}}
{{ print.modalaction('Section','show')}}
{% endblock %}
