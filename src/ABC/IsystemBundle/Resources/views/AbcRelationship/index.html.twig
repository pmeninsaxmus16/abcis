{% extends "ABCIsystemBundle::layoutAdmin.html.twig" %}
{% block title %} Relationship List {% endblock %}

{% block scripthead %}
 <script src="{{ asset('Resources/js/bootstrap-tooltip.js') }}"></script>
{% endblock %}
 
{% block sidebar %}{% endblock %} 

{% block contenido %}
{% import "ABCIsystemBundle:Default:tools.html.twig" as print %}

<div class="span12 ">
<h3>
{{block('title')}}   
</h3>  

<p><a href="#save" class="btn btn-primary"  data-toggle="modal">
<i class="icon-plus icon-white"></i> Add new
</a></p>
    <table class="table table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Relationship</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><!--<a href="{{ path('isystem_admin_mtto_relationship_show', { 'id': entity.id }) }}">-->{{ entity.id }}<!--</a>--></td>
                <td>{{ entity.relationship }}</td>
                <td>{% if entity.createdDate %}{{ entity.createdDate|date('H:i:s d-m-Y') }}{% endif %}</td>
                <td>
                    {{ print.action('isystem_admin_mtto_relationship_show','isystem_admin_mtto_relationship_edit', entity.id)}}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 </div>
<div class="pagination pagination-small pagination-right">
{{ knp_pagination_render(pagination) }}
</div>

{{ print.modalaction('Relationship','save')}}
{{ print.modalaction('Relationship','edit')}}
{{ print.modalaction('Relationship','show')}}
{% endblock %}
