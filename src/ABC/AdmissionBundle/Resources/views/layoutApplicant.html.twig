<!DOCTYPE html>
<html lang="en">
<head>
{% block head %}
   {% block meta %}
   <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   {% endblock %}
   
   <title>{% block title %}:: Admission ::{% endblock %}</title>

   {% block cssDefault %}
   <link href="{{ asset('Resources/css/bootstrap.css') }}" rel="stylesheet" media="all">
   <link href="{{ asset('Resources/css/bootstrap-responsive.css') }}" rel="stylesheet" media="all">
   <link href="{{ asset('Resources/css/styles.css') }}" rel="stylesheet" media="all">   
   {% endblock %}
   {% block css %}{% endblock %}
   
   {% block jsDefault %}
   <script src="{{ asset('Resources/js/jquery.js') }}"></script>
   <script src="{{ asset('Resources/js/bootstrap.js') }}"></script>  
   <script src="{{ asset('Resources/js/bootstrap-alert.js') }}"></script>
   <script src="{{ asset('Resources/js/bootstrap-tooltip.js') }}"></script>
   <script src="{{ asset('Resources/js/bootstrap-popover.js') }}"></script>
   {% endblock %}
   {% block js %}{% endblock %}
   {#{% block scripthead %}{% endblock %}#}
   <style type="text/css">{% block stylesheets %}{% endblock %}</style>
{% endblock %}
</head>

<body>
{# ###### BLOCK CONTIENTE TODO EL BODY ##### #}
{% block body %}
<div class="container-fluid">
  <div class="row-fluid">
  <div class="span8 offset2">
  {% block bodycontenido %}
  {# BLOCK BODY Contenido#}
     <div class="row-fluid">
     <div class="span12">      
     {% block header %}
        <div class="row-fluid">
        <div class="span3">
        {% block headerLogo %}
          <img src="{{ asset('Resources/img/abclogo.png') }}"/>
        {% endblock %}
        </div>
        <div class="span6">
        {% block headerTitle %}
            <center>         
               <h3>ACADEMIA BRITANICA CUSCATLECA</h4>
               <h4>Application for Admission - Formulario de Admision</h4>
               </center>
        {% endblock %}
        </div>
        <div class="span3 pull-right">
        {% block headerPic %}
             <img src="{{ asset('Resources/img/user-unknown.gif') }}" class="pull-right"/>
        {% endblock %}
        </div>   
        </div>
     {% endblock %}
     </div>
     </div>
          
     <div class="row-fluid">
     <div class="span12"> 
     {% block contenido %} aqui ira el formulario de applicante
     {% endblock %}
     </div>
     </div>
     <div class="row-fluid">
     <div class="span12"> 
     {% block footer %} 
          <img src="{{ asset('Resources/img/footer.png') }}"/>
     {% endblock %}
     </div>
     </div>
  {% endblock %}
  </div>
  </div>
  {# BLOCK BODY Contenido #}
</div>
{% endblock %}
{# BLOCK BODY #}
{# ###### BLOCK PARA JAVASCRIPTS ##### #}
{% block javascripts %}{% endblock %}          
{# ###### BLOCK PARA JAVASCRIPTS ##### #}   
</body>
</html>
