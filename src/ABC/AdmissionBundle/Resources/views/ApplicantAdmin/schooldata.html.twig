{% if school is empty %}
<table class="table table-bordered">
    <tbody>
	<tr><th colspan="3" align="center" class="label label-info">Present School: </th></tr>
	<tr>
    <td rowspan=2><strong>Name of the Head:</strong>  </td>
    <td colspan="2" align="center" valign="center"><strong>Attended</strong></td> 
    </tr>
    <tr>
        <td><strong>From: </strong> </td>
        <td><strong>To: </strong> </td>
    </tr>
    <tr>
         <td rowspan=2><strong>Address: <br></strong></td>
         <td colspan="2"><strong>E-mail:</strong>  </td>
    </tr>
    <tr>
         <td colspan="2"><strong>Tel: </strong> </td>
    </tr>     
	
	{% for pschool in  previous %}
	<tr><th colspan="3" align="center">Previous School: </th></tr>
	<tr>
    <td rowspan=2><strong>Name of the Head:</strong> </td>
    <td colspan="2" align="center" valign="center"><strong>Attended</strong></td> 
    </tr>
    <tr>
        <td><strong>From: </strong> </td>
        <td><strong>To: </strong> </td>
    </tr>
    <tr>
         <td rowspan=2><strong>Address: <br></strong>   </td>
         <td colspan="2"><strong>E-mail:</strong>  </td>
    </tr>
    <tr>
         <td colspan="2"><strong>Tel: </strong> </td>
    </tr>    
	{% else %}
	<tr><th colspan="3" align="center">No Previous School </th></tr>
	{% endfor %} 
	</tbody>
</table>
{%else %}
<table class="table table-bordered">
    <tbody>
	<tr><th colspan="3" align="center" class="label label-info">Present School: {{ school.schoolName }}</th></tr>
	<tr>
    <td rowspan=2><strong>Name of the Head:</strong> {{ school.headName }} </td>
    <td colspan="2" align="center" valign="center"><strong>Attended</strong></td> 
    </tr>
    <tr>
        <td><strong>From: </strong> {{ school.fromDate }}</td>
        <td><strong>To: </strong> {{ school.toDate }}</td>
    </tr>
    <tr>
         <td rowspan=2><strong>Address: <br></strong>{{school.address.address}}</td>
         <td colspan="2"><strong>E-mail:</strong> {{ school.eMail }} </td>
    </tr>
    <tr>
         <td colspan="2"><strong>Tel: </strong> {{ school.phoneNumber }}</td>
    </tr>     
	
	{% for pschool in previous %}
	<tr><th colspan="3" align="center">Previous School: {{ pschool.schoolName }}</th></tr>
	<tr>
    <td rowspan=2><strong>Name of the Head:</strong> {{ pschool.headName }} </td>
    <td colspan="2" align="center" valign="center"><strong>Attended</strong></td> 
    </tr>
    <tr>
        <td><strong>From: </strong> {{ pschool.fromDate }}</td>
        <td><strong>To: </strong> {{ pschool.toDate }}</td>
    </tr>
    <tr>
         <td rowspan=2><strong>Address: <br></strong>  {{pschool.address.address}} </td>
         <td colspan="2"><strong>E-mail:</strong> {{ pschool.eMail }} </td>
    </tr>
    <tr>
         <td colspan="2"><strong>Tel: </strong> {{ pschool.phoneNumber }}</td>
    </tr>    
	{% endfor %} 
	</tbody>
</table>

{%endif%}