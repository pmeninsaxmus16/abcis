{% macro action(pathshow,pathedit,id) %}
<div class="btn-group">
<button class="btn dropdown-toggle" data-toggle="dropdown" href="#">Action 
<span class="caret"></span>
</button>
<ul class="dropdown-menu">
<li>
{#<a href="{{ path(pathshow, { 'id': id }) }}">#}
<a href="#show" data-toggle="modal" onclick=" $(this).removeData('modal'); $('.modal-body-show').load('{{ path(pathshow,{ 'id': id }) }}');"> 
<i class="icon-eye-open"></i> Show</a>
</li>
<li>
{#<a href="{{  path(pathedit, { 'id': id }) }}"> #}
<a href="#edit" data-toggle="modal" onclick=" $(this).removeData('modal'); $('.modal-body-edit').load('{{ path(pathedit,{ 'id': id }) }}');"> 
<i class="icon-edit"></i> Edit</a></li>
</ul>
</div>  
{% endmacro %}



